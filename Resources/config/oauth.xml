<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp_oauth.authentication.listener.oauth.class">Knp\OAuthBundle\Security\Http\Firewall\OAuthListener</parameter>
        <parameter key="knp_oauth.authentication.provider.oauth.class">Knp\OAuthBundle\Security\Core\Authentication\Provider\OAuthProvider</parameter>
        <parameter key="knp_oauth.authentication.entry_point.oauth.class">Knp\OAuthBundle\Security\Http\EntryPoint\OAuthEntryPoint</parameter>
    </parameters>

    <services>

        <service id="knp_oauth.authentication.listener.oauth" class="%knp_oauth.authentication.listener.oauth.class%" parent="security.authentication.listener.abstract">
            <call method="setHttpClient">
                <argument type="service" id="buzz.client" />
            </call>
        </service>
        <service id="knp_oauth.authentication.provider.oauth" class="%knp_oauth.authentication.provider.oauth.class%" />
        <service id="knp_oauth.authentication.entry_point.oauth" class="%knp_oauth.authentication.entry_point.oauth.class%" />
    </services>
</container>